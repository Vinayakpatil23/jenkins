pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building automatically again '
            }
        }
        stage('Build2') {
            steps {
                echo 'Building automatically again 2'
            }
        }
 stage('Test') {
            steps {
                echo 'Testing automatically again'
            }
        }
 stage('Deploy') {
            steps {
                echo 'Deploying automatically using jenkins'
            }
        }
    }
}
